{
  "name": "button",
  "render": [
    {
      "component": "TouchableOpacity",
      "props": {
        "style": {
          "justifyContent": "center",
          "alignItems": "center"
        },
        "onPress": {
          "action": "dialog/alert",
          "message": "this is a button"
        }
      },
      "children": [
        {
          "component": "Text",
          "props": {
            "style": {
              "color": "#f00f",
              "fontSize": 16
            }
          },
          "children": ["this is a button"]
        }
      ]
    },
    {
      "component": "TouchableOpacity",
      "props": {
        "style": {
          "paddingTop": 20,
          "justifyContent": "center",
          "alignItems": "center"
        },
        "onPress": {
          "action": "navigate/to",
          "message": "this button navigate to other page"
        }
      },
      "children": [
        {
          "component": "Text",
          "props": {
            "style": {
              "color": "#055f",
              "fontSize": 16
            }
          },
          "children": ["this is a navigation button"]
        }
      ]
    }
  ]
}
